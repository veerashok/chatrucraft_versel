
{
  "$schema": "https://railway.app/railway.schema.json",
  "services": [
    {
      "name": "backend",
      "path": "backend",
      "build": {
        "builder": "dockerfile",
        "dockerfilePath": "Dockerfile"
      },
      "start": "uvicorn main:app --host 0.0.0.0 --port 8000"
    },
    {
      "name": "frontend",
      "path": "frontend",
      "build": {
        "builder": "npm",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
      },
      "start": "npm run start"
    }
  ]
}
